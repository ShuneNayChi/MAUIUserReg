<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIUserReg.Register" 
             BackgroundColor ="white"
             Title="Register">
    <StackLayout Margin="15" Padding="30, 60, 30, 30">
        <Label Text="Username" TextColor="#ffffff"/>
        <Entry x:Name="txtUserName" TextColor="#ffffff"/>
        <Label Text="Password" TextColor="white"/>
        <Entry IsPassword="True" x:Name="txtPassword" TextColor="#ffffff"/>
        <Button x:Name="btnSignUp" TextColor="#02425A" Text="Register" BackgroundColor="#ffffff" Clicked="RegisterButton_Clicked" />
    </StackLayout>
</ContentPage>